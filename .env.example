DATABASE_URL="postgresql://postgres:postgres@localhost:5432/komrest?schema=public"
AUTH_SECRET="replace-with-long-random-secret"
AUTH_TRUST_HOST="true"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Storage: local | s3
STORAGE_DRIVER="local"
STORAGE_LOCAL_BASE_PATH="public/uploads"

# S3 (required when STORAGE_DRIVER=s3)
S3_ENDPOINT=""
S3_REGION="ap-southeast-1"
S3_BUCKET=""
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_PUBLIC_BASE_URL=""
S3_FORCE_PATH_STYLE="false"
S3_ACL=""

# Optional bootstrap manager (only used when no manager exists)
BOOTSTRAP_ADMIN_EMAIL="admin@komrest.com"
BOOTSTRAP_ADMIN_PASSWORD="password123"

# Migration default
MIGRATION_DEFAULT_PASSWORD="password123"
